/**
 * A 16-bit counter with load and reset control bits.
 * if      (reset[t] == 1) out[t+1] = 0
 * else if (load[t] == 1)  out[t+1] = in[t]
 * else if (inc[t] == 1)   out[t+1] = out[t] + 1  (integer addition)
 * else                    out[t+1] = out[t]
 */

CHIP PC {
    IN in[16],load,inc,reset;
    OUT out[16];

    PARTS:
    // load:
    Mux16(a=regValue, b=in, sel=load, out=value1);

    // reset:
    Mux16(a=value1, b=false, sel=reset, out=value2);

    // inc:
    Inc16(in=value2, out=incOut);
    Mux16(a=value2, b=incOut, sel=inc, out=value3);

    Register(in=value3, load=true, out=regValue, out=out);
}
